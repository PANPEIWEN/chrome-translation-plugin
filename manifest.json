{
  "manifest_version": 3,
  "name": "Easy Translate",
  "version": "1.0",
  "description": "A simple and easy-to-use translation extension powered by Google Translate.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Translate",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ]
}
